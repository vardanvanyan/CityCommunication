<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/comm_card_start"
        android:layout_marginTop="@dimen/comm_card_top"
        android:layout_marginEnd="@dimen/comm_card_end"
        android:layout_marginBottom="@dimen/comm_card_bottom"
        app:cardCornerRadius="@dimen/comm_card_corner_radius"
        app:cardElevation="@dimen/comm_card_el" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_img"
        android:layout_width="@dimen/comm_circle_img_width"
        android:layout_height="@dimen/comm_circle_img_height"
        android:src="@drawable/admin" />

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/comment_img"
        android:text="@string/name" />

    <TextView
        android:id="@+id/comment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_img"
        android:text="@string/description" />

</RelativeLayout>